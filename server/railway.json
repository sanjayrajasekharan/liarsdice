{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm --filter shared build && pnpm --filter server build",
    "watchPatterns": [
      "/server/**",
      "/shared/**",
      "pnpm-lock.yaml"
    ]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "pnpm --filter server start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "variables": {
      "CORS_ORIGIN": "https://${{client.RAILWAY_PUBLIC_DOMAIN}}"
    }
  }
}
